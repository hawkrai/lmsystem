@using Application.Core.UI.HtmlHelpers
@using LMPlatform.UI.Controllers
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title Аднимистрирование LMP разработка</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/datatable-bootstrap.css">

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/bootstrapcontrols")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/admin-style/css")

    @RenderSection("css", false)

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/shared")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrapcontrols")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/ajaxChosen")
    <script src="~/Scripts/application/Messages/message.js"></script>

    @RenderSection("headScripts", false)

    <script src="~/Scripts/application/Administration/administrationManagement.js" type="text/javascript"></script>
</head>
<body>
    <div id="admin">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Administration")" class="navbar-brand">
                    <i class="fa fa-home"></i><b>(LMS).Platform<sup>Администрирование</sup></b>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav side-nav">
                    @if (IsSectionDefined("navleft"))
                    {
                        @RenderSection("navleft", false)
                    }
                    else
                    {
                        <li class="@Html.ActivePage("Administration", "Professors")">
                            <a href="@Url.Action("Professors", "Administration")">
                                <span class="admin-icon icon-study"></span>
                                <span class="nav-item">Преподаватели</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Students")">
                            <a href="@Url.Action("Students", "Administration", new { id = string.Empty })">
                                <span class="admin-icon icon-users"></span>
                                <span class="nav-item">Студенты</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Groups")">
                            <a href="@Url.Action( "Groups", "Administration")">
                                <span class="admin-icon icon-users2"></span>
                                <span class="nav-item">Группы</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Files")">
                            <a href="@Url.Action( "Files", "Administration")">
                                <span class="admin-icon icon-upload"></span>
                                <span class="nav-item">Файлы</span>
                            </a>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" style="margin-right: 10px">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="fa  fa-comments"></i> Чат <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Chat")"><i class="fa fa-comments"></i> Чат </a></li>
                            <li>
                                <div class="onoffswitch">
                                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch" checked="@ChatController.EnabledChat"
                                           onchange="chatControl();" />
                                    <label class="onoffswitch-label" for="myonoffswitch">
                                        <span class="onoffswitch-inner"></span>
                                        <span class="onoffswitch-switch"></span>
                                    </label>

                                </div>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Message")"><i class="fa fa-envelope"></i> Сообщения <span class="badge">@Html.Action("MessagesCount", "Message")</span></a>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
        @RenderSection("featured", required: false)
        @RenderSection("specificScripts", required: false)
        <div class="section-wrapper">
            @RenderSection("scripts", false)
            <section >
                <div style="padding: 0 10px">
                    @if (IsSectionDefined("title"))
                    {

                        <h3>@RenderSection("title", false)</h3>
                        <hr>
                    }
                  
                        @RenderBody()
                    
                </div>
            </section>
        </div>
        @Scripts.Render("~/bundles/bootbox")
    </div>
</body>
</html>