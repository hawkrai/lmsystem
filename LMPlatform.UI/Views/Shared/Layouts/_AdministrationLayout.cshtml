@using Application.Core.UI.HtmlHelpers
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title Аднимистрирование LMP разработка</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/datatable-bootstrap.css">

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/bootstrapcontrols")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/admin-style/css")

    @RenderSection("css", false)

    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/shared")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrapcontrols")
    @Scripts.Render("~/bundles/angular")

    <script src="~/Scripts/application/message.js"></script>

    @RenderSection("headScripts", false)

    <script src="~/Scripts/application/Administration/administrationManagement.js" type="text/javascript"></script>
</head>
<body>
    <div id="admin" style="padding-left: 300px;">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Administration")" class="navbar-brand">
                    <i class="fa fa-home"></i><b>(LMS).Platform<sup>Администрирование</sup></b>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav side-nav">
                    @if (IsSectionDefined("navleft"))
                    {
                        @RenderSection("navleft", false)
                    }
                    else
                    {
                        <li class="@Html.ActivePage("Administration", "Professors")">
                            <a href="@Url.Action("Professors", "Administration")">
                                <span class="admin-icon icon-study"></span>
                                <span class="nav-item">Преподаватели</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Students")">
                            <a href="@Url.Action("Students", "Administration", new { id = string.Empty })">
                                <span class="admin-icon icon-users"></span>
                                <span class="nav-item">Студенты</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Groups")">
                            <a href="@Url.Action( "Groups", "Administration")">
                                <span class="admin-icon icon-users2"></span>
                                <span class="nav-item">Группы</span>
                            </a>
                        </li>
                        <li class="@Html.ActivePage("Administration", "Files")">
                            <a href="@Url.Action( "Files", "Administration")">
                                <span class="admin-icon icon-upload"></span>
                                <span class="nav-item">Файлы</span>
                            </a>
                        </li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Index", "Message")"><i class="fa fa-envelope"></i> Сообщения <span class="badge">@Html.Action("MessagesCount", "Message")</span></a>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
        @RenderSection("featured", required: false)
        @RenderSection("specificScripts", required: false)
        <div style="padding: 80px 30px">
            @RenderSection("scripts", false)
            <section class="well">
                <div style="padding: 0 10px">
                    @if (IsSectionDefined("title"))
                    {

                        <h3>@RenderSection("title", false)</h3>
                        <hr>
                    }
                    <div style="margin: 5px">
                        @RenderBody()
                    </div>
                </div>
            </section>
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>
                        &copy; @DateTime.Now.Year - Администрирование LMP разработка
                    </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/bootbox")
    </div>
</body>
</html>