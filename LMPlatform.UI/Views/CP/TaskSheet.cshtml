<div style="min-height:500px">
    @*<div style="padding-left:0px; width: 10%; float:left">
        <label for="project">Курсовой проект (работа)</label>
    </div>*@
    <div class="col-md-8" style="padding:0; width:92%; height:auto; float:left">
        <ui-select on-select="selectProject($item)" ng-model="project.Id" theme="bootstrap">
            <ui-select-match placeholder="Выберите тему курсового проекта (работы)">{{$select.selected.Name}}</ui-select-match>
            <ui-select-choices repeat="item.id as item in projects | filter: $select.search">
                <div>{{item.Name}}</div>
            </ui-select-choices>
        </ui-select>
    </div>
    <a ng-show="selectedProjectId" ng-click="downloadTaskSheet()" style="margin-left: 1%; margin-top:5px; width:3%; display:block; float:left">
        <i tooltip-placement="left" tooltip="Скачать лист задания" class="fa fa-download fa-2x"></i>
    </a>
    <a ng-show="selectedProjectId" ng-click="editTaskSheet()" style="margin-left: 1%; margin-top:5px; width:3%; display:block; float:left">
        <i tooltip-placement="left" tooltip="Редактировать" class="fa fa-edit fa-2x"></i>
    </a>
    <br />
    <br />
    <br />
    <div style="width:100%;" ng-bind-html="taskSheetHtml"></div>
</div>