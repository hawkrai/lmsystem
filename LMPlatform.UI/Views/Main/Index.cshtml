<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document" style="width: 900px; margin-top: 115px">
		<div class="modal-content" style="background: transparent; border: none; box-shadow: none; margin-left: -50px;">
			<div class="modal-body" style="height: 470px;">
				<video id="videoLMS" muted="" loop="" style="width: 900px;">
					<source src="CATS_LMS.mp4" type="video/mp4">
				</video>
			</div>
		</div>
	</div>
</div>

<script>


	$('#myModal').on('show.bs.modal', function (e) {
		$("#videoLMS")[0].play();
	});
	$('#myModal').on('hidden.bs.modal', function (e) {
		$("#videoLMS")[0].pause();
	});
</script>

